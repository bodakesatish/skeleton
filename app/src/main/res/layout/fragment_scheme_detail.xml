<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeToRefresh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/vFundHouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fund House : "
            android:textColor="#CC000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvFundHouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PPFAS Mutual Fund"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/vFundHouse"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vSchemeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheme Type : "
            android:textColor="#CC000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vFundHouse" />

        <TextView
            android:id="@+id/tvSchemeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Ended Schemes"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/vSchemeType"
            app:layout_constraintTop_toBottomOf="@+id/vFundHouse" />

        <TextView
            android:id="@+id/vSchemeCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheme Category : "
            android:textColor="#CC000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vSchemeType" />

        <TextView
            android:id="@+id/tvSchemeCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equity Scheme - Multi Cap Fund"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/vSchemeCategory"
            app:layout_constraintTop_toBottomOf="@+id/vSchemeType" />

        <TextView
            android:id="@+id/vSchemeCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheme Code : "
            android:textColor="#CC000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vSchemeCategory" />

        <TextView
            android:id="@+id/tvSchemeCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="122639"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/vSchemeCode"
            app:layout_constraintTop_toBottomOf="@+id/vSchemeCategory" />

        <TextView
            android:id="@+id/vSchemeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheme Code : "
            android:textColor="#CC000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vSchemeCode" />

        <TextView
            android:id="@+id/tvSchemeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="122639"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/vSchemeName"
            app:layout_constraintTop_toBottomOf="@+id/vSchemeCode" />

        <include
            android:id="@+id/schemeTotalInvestment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/vSchemeName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            layout="@layout/mutual_fund_list_item"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSchemeNav"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/btnAction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schemeTotalInvestment"
            tools:listitem="@layout/item_scheme_nav" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:text="None"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>