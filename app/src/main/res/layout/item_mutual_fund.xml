<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/cvItemMutualFund">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSchemeCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            android:gravity="start"
            android:text="P8736483268942"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSchemeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:text="Parag Parikh Long Term Equity Fund Direct - Growth"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSchemeCode" />


        <TextView
            android:id="@+id/vInvestment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:gravity="start"
            android:text="Investment"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#80000000"
            app:layout_constraintEnd_toStartOf="@+id/vCurrentValue"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSchemeName" />

        <TextView
            android:id="@+id/vCurrentValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:gravity="start"
            android:text="Current Value"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#80000000"
            app:layout_constraintEnd_toStartOf="@+id/vCurrentReturns"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@+id/tvInvestment"
            app:layout_constraintTop_toBottomOf="@+id/tvSchemeName" />

        <TextView
            android:id="@+id/vCurrentReturns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:gravity="start"
            android:text="Returns"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#80000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@+id/vCurrentValue"
            app:layout_constraintTop_toBottomOf="@+id/tvSchemeName" />


        <TextView
            android:id="@+id/tvInvestment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20,000.00"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#E6000000"
            app:layout_constraintStart_toStartOf="@+id/vInvestment"
            app:layout_constraintTop_toBottomOf="@+id/vInvestment" />


        <TextView
            android:id="@+id/tvCurrentValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21,637.47"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#E6000000"
            app:layout_constraintStart_toStartOf="@+id/vCurrentValue"
            app:layout_constraintTop_toBottomOf="@+id/vCurrentValue" />

        <TextView
            android:id="@+id/tvCurrentReturns"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1,6737.47(+8.19)"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#E6000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/vCurrentReturns"
            app:layout_constraintTop_toBottomOf="@+id/vCurrentReturns" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupInvestment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="vInvestment,tvInvestment,vCurrentValue,tvCurrentValue,vCurrentReturns,tvCurrentReturns" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>